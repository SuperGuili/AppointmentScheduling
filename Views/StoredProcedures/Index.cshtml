@model List<AppointmentScheduling.Models.StoredProcedures.SP_SelectAllUsers>


@if (Model.Count > 0)
{

    <table class="table-striped col-12">
        <thead>
            <tr>
                <th width="20%">Name</th>
                <th width="20%">Telephone</th>
                <th width="60%">NEW Phone</th>
                
            </tr>
        </thead>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Telephone</td>
                <td>
                    <div class="form-inline">
                        <form asp-action="SP_UpdatePhone" asp-controller="StoredProcedures" method="post"
                              asp-route-userId="@user.UserId">
                            <input asp-for="@user.Telephone" value="@user.Telephone" name="phone" class="form-control" />

                            <button type="submit" class="btn btn-primary">Change</button>
                        </form>
                    </div>               
                </td>
            </tr>
        }
    </table>

}
else
{
    <h1 class="text-danger">No results</h1>
}