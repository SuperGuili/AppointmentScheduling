@model List<AppointmentScheduling.Models.ViewModels.ListUsersViewModel>

<h2>List of Users</h2>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Role
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td width="25%">@user.Id</td>
                    <td width="25%">@user.Name</td>
                    <td width="25%">@user.Email</td>
                    <td width="25%">@user.Role</td>

                </tr>
            }
        </tbody>

    </table>

}