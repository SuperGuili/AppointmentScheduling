@model List<Fee>


<div class="row">
        <div class="col-6">
            <h3 class="mx-5">Fees List</h3>
        </div>

        <div class="col-6 text-right">
            <a asp-action="AddFee" asp-controller="Fee" class="btn btn-success mx-5">Add Fee</a>
        </div>
</div>

<hr />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Description
                </th>
                <th>
                    Duration
                </th>
                <th>
                    Value
                </th>
                <th>
                    Admin Id
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var fee in Model)
            {
                <tr>
                    <td width="20%">@fee.Description</td>
                    <td width="20%">@fee.Duration</td>
                    <td width="20%">@fee.Value.ToString("C")</td>
                    <td width="20%">@fee.AdminId</td>
                    <td width="20%">
                        <div class="text-center">
                            <form asp-action="DeleteFee" asp-route-id="@fee.Id" method="post">
                                <a class="btn btn-primary btn-sm" asp-action="UpdateFee" asp-controller="Fee"
                                   asp-route-id="@fee.Id">Update</a>

                                <button class="btn btn-danger btn-sm" type="submit" asp-action="DeleteFee" asp-controller="Fee"
                                   asp-route-id="@fee.Id">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>

                </tr>
            }
        </tbody>

    </table>
}